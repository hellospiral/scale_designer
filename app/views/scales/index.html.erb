<h1>Recent Scales:</h1>

<br>

<% if @scales.any? %>
  <div class="well">
    <ul id="scales_list" class="list-group">
      <% @scales.each do |scale| %>
        <li class="list-group-item"><%= link_to scale.name, scale_path(scale) %></li>
      <% end %>
    </ul>
  </div>

<% else %>
  <h5>There are no scales, click below to add one</h5>

<% end %>

<hr>
<div id= "newScaleButton" class="bigButton">
  <%= link_to "Add a Scale", new_scale_path, class: "btn btn-primary btn-outline btn-lg", remote: true %>
</div>
<div id="newScaleForm">
</div>
