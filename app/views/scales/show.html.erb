<h1><%= @scale.name %></h1>

<% if @scale.notes.any? %>

  <h4>Here are the notes in this scale:</h4>
  <div class='well'>
    <ul class="list-group">
      <% @scale.notes.each_with_index do |note, index| %>
        <li class="list-group-item">
          <div id="note<%=index%>">
            <%= note.frequency %> |
          </div>
          <%= link_to "Edit", edit_scale_note_path(@scale, note) %> |
          <%= link_to "Delete", scale_note_path(@scale, note),
                                   :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
          <%= content_tag :div, class: "freq_information", data: {freq1: @scale.notes[index].frequency, notes: @scale.notes } do %>
          <% end %>

        </li>

        <!-- <hr>
        <div id="page-wrapper" class="clearfix">
          <canvas id="synth-pad"></canvas>
          <div id="info">
            <h1></h1>
            <p>
              Click to hear the note.
            </p>
            <p>
              Frequency: <span id="frequency"><%=note.frequency%> Hz</span>
            </p>
          </div>
        </div>
        <hr> -->

      <% end %>
    </ul>
  </div>
<% else %>
  <p>This scale has no notes yet!</p>
<% end %>

<p><%= link_to "Add a note", new_scale_note_path(@scale) %></p>


<p><%= link_to "Edit Scale Name", edit_scale_path(@scale) %></p>
<p><%= link_to "Delete " + @scale.name, scale_path(@scale),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<hr>

<p><%= link_to "Back to scales", scales_path %></p>
