<h1><%= @scale.name %></h1>
<% if current_user == @scale.user %>
  <div class="outer">
    <div class="inner">
      <%= link_to "Edit Scale Name", edit_scale_path(@scale), class:"btn btn-warning btn-outline btn-xs" %>
    </div>
    <div class="inner">
      <%= link_to "Delete Scale", scale_path(@scale), class: "btn btn-danger btn-outline btn-xs",
                               :data => {:confirm => "You sure?",
                                         :method => "delete"} %>
    </div>
  </div>
<% end %>
<div id="notes_list">
  <% if @scale.notes.any? %>
    <%= render :partial => 'notes/notes_list', :object => @scale.notes %>
  <% else %>
    <p class="bufferText">This scale has no notes yet!</p>
  <% end %>
</div>
<% if current_user == @scale.user || !@scale.user %>
  <%= link_to "Add some notes", new_scale_note_path(@scale), class: "btn btn-primary btn-outline", id: 'add_notes_link', remote: true %>
<% end %>
<div id="add_notes_form">
</div>
<hr>

<%= javascript_include_tag "show_scale" %>
